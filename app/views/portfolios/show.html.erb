<div class="container">
	<div class="row">
		<div class="col-md-7 crop">
			<%= image_tag portfolio_img(@portfolio_item.main_image.url, 'main'), width: '100%', class: "portfolio-img" %>
		</div>

		<div class="col-md-5">
			<h1><%= @portfolio_item.title.to_s %></h1>
			<h4><%= @portfolio_item.subtitle.to_s %></h4>

			<%= @portfolio_item.body.to_s %>
			<hr>

			<%= link_to 'Edit',  edit_portfolio_path(@portfolio_item.id) if logged_in?(:site_admin)%>
			<%= link_to 'All Portfolio Items', portfolios_path %>
			<%= link_to 'Delete Portfolio Item',@portfolio_item, method: :delete, data: { confirm: 'Are you Sure?' } if logged_in?(:site_admin)%>

			<% unless @portfolio_item.technologies.empty? %>
				<h2>Technologies Used</h2>
				<% @portfolio_item.technologies.each do |t| %>
					<%= t.name %>
				<% end %>

				<% if logged_in?(:site_admin) %>
					<div class="col-md-12">
						<center>
							<%= link_to '', edit_portfolio_path(@portfolio_item), class: 'btn-outline-warning-animated', 'data-content': 'Edit Technologies' %>
						</center>
					</div>
				<% end %>
			<% end %>

			<hr>
		</div>
	</div>
</div>


