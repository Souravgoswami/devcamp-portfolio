<%= form_for(@portfolio_item) do |f| %>
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.label :subtitle %>
				<%= f.text_field :subtitle, class: 'form-control' %>
			</div>
		</div>

		<div class="col-md-6">
			<div class="form-group">
				<%= f.label :body %>
				<%= f.text_area :body, class: 'form-control', rows: 6 %>
			</div>
		</div>

		<div class="col-md-12">
			<div class="form-group">
				<%= f.label 'Main Image:' %>
				<%= f.text_field :main_image, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.label 'Thumb Image:' %>
				<%= f.text_field :thumb_image, class: 'form-control' %>
			</div>
		</div>
	</div>

	<h2>Technologies Used</h2>
	<%= f.fields_for :technologies do |tf| %>
		<div class="form-group">
			<%= tf.label :name %>
			<%= tf.text_field :name, class: 'form-control' %>
		</div>
	<% end %>

	<div class="actions">
		<%= f.submit 'Save Portfolio Item', class: 'btn btn-outline-primary btn-block' %>
	</div>
<% end %>
