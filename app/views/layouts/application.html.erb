<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= @page_title %></title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="keywords" content="<%= @seo_keywords %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= stylesheet_link_tag 'buttons', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= stylesheet_link_tag 'notify-send', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shared/alerts' %>
    <%= render 'shared/application_nav', location: 'top' %>
    <div class="video-wrapper background">
      <%= video_tag(
          'busy_morning_street.mp4', id: 'background',
          autoplay: true,
          loop: true,
          muted: true,
          poster: 'bg.jpg'
        )
      %>
      </div>

    <div class="site-wrapper">
      <div class="site-wrapper-inner">
        <div class="cover-container">

          <%= yield %>

          <%= source_helper('application') %>
        </div>
      </div>
    </div>

    <div class="footer">
      <%= render('shared/application_footer') %>
    </div>
  </body>
</html>
