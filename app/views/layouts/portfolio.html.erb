<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="keywords" content="<%= @seo_keywords %>">
		<meta name="viewport" content="width=device-width,initial-scale=1,shrink-fit=no">

		<title><%= @page_title %></title>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>

		<%= stylesheet_link_tag 'portfolios', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>

	<body>
		<% if notice %>
			<p class="notice"><%= notice %></p>
		<% end %>

		<% if alert %>
			<p class="alert"><%= alert %></p>
		<% end %>

		<%= render 'shared/portfolio_nav' %>
		<%= render('shared/portfolio_jumbotron') unless logged_in?(:site_admin) %>

		<%= yield %>

		<%= render('shared/portfolio_footer') %>
		<%= source_helper('application') %>
	</body>
</html>
