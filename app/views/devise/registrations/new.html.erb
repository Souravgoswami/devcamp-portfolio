<%= render "devise/shared/error_messages", resource: resource %>

<div class="flex-centre">
	<div class="card">
		<div class="card-body">
			<h2>Sign up</h2>

			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<div class="row">

					<div class="col-md-6">
						<div class="form-group">
							<%= f.label :email do %>
								Email
							<% end %>
							<%= f.email_field :email, autofocus: false, autocomplete: "email", class: 'form-control' %>
						</div>
					</div>

					<div class="col-md-6">
						<div class="form-group">
							<%= f.label :name do %>
								Name
							<% end %>
							<%= f.text_field :name, autofocus: false, autocomplete: "name", class: 'form-control' %>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-md-6">
						<div class="form-group">
							<%= f.label :password do %>
								Password
								<% if @minimum_password_length %>
									(<%= @minimum_password_length %> chars minimum)
								<% end %>
							<% end %>

							<%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
						</div>
					</div>

					<div class="col-md-6">
						<div class="form-group">
							<%= f.label :password_confirmation do %>
								Password Confirmation
							<% end %>
							<%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-md-6">
						<center>
							<div class="actions">
								<label class="no-border btn-outline-success-animated" data-content="Sign Up">
									<%= f.submit "", style: 'display: none' %>
								</label>
							</div>
						</center>
					</div>

					<div class="col-md-6">
						<center>
							<%= render "devise/shared/links" %>
						</center>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
